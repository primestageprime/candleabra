{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Start Deno Test Debug",
      "type": "shell",
      "command": "deno",
      "args": ["test", "--allow-read", "--inspect-brk=0.0.0.0:9229", "${file}"],
      "group": "test",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": true,
        "clear": false
      },
      "isBackground": true,
      "problemMatcher": {
        "pattern": {
          "regexp": ".",
          "file": 1,
          "location": 2,
          "message": 3
        },
        "background": {
          "activeOnStart": true,
          "beginsPattern": ".*",
          "endsPattern": ".*"
        }
      }
    },
    {
      "label": "Start Deno All Tests Debug",
      "type": "shell",
      "command": "deno",
      "args": ["test", "--allow-read", "--inspect-brk=0.0.0.0:9229"],
      "group": "test",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": true,
        "clear": false
      },
      "isBackground": true,
      "problemMatcher": {
        "pattern": {
          "regexp": ".",
          "file": 1,
          "location": 2,
          "message": 3
        },
        "background": {
          "activeOnStart": true,
          "beginsPattern": ".*",
          "endsPattern": ".*"
        }
      }
    },
    {
      "label": "Debug Current Test File",
      "type": "shell",
      "command": "deno",
      "args": ["test", "--allow-read", "--inspect-brk=0.0.0.0:9229", "${file}"],
      "group": "test",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": true,
        "clear": false
      },
      "problemMatcher": []
    },
    {
      "label": "Debug All Tests",
      "type": "shell",
      "command": "deno",
      "args": ["test", "--allow-read", "--inspect-brk=0.0.0.0:9229"],
      "group": "test",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": true,
        "clear": false
      },
      "problemMatcher": []
    },
    {
      "label": "Run Tests",
      "type": "shell",
      "command": "deno",
      "args": ["task", "test"],
      "group": "test",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": true,
        "clear": false
      },
      "problemMatcher": []
    }
  ]
}
