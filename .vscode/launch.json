{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug Current Test File",
      "type": "node",
      "request": "launch",
      "program": "deno",
      "args": ["test", "--allow-read", "--inspect-brk=0.0.0.0:9229", "${file}"],
      "cwd": "${workspaceFolder}",
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "skipFiles": ["<node_internals>/**"],
      "env": {
        "DENO_DIR": "${workspaceFolder}/.deno"
      },
      "outputCapture": "std"
    },
    {
      "name": "Debug All Tests",
      "type": "node",
      "request": "launch",
      "program": "deno",
      "args": ["test", "--allow-read", "--inspect-brk=0.0.0.0:9229"],
      "cwd": "${workspaceFolder}",
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "skipFiles": ["<node_internals>/**"],
      "env": {
        "DENO_DIR": "${workspaceFolder}/.deno"
      },
      "outputCapture": "std"
    },
    {
      "name": "Attach to Deno Debugger",
      "type": "node",
      "request": "attach",
      "port": 9229,
      "address": "localhost",
      "localRoot": "${workspaceFolder}",
      "remoteRoot": "${workspaceFolder}",
      "protocol": "inspector",
      "restart": true,
      "timeout": 30000
    }
  ]
}
